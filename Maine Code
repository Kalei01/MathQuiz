<body>
    <button class="sound-toggle" id="soundToggle">
        <i class="fas fa-volume-up"></i>
    </button>

    <div class="container">
        <div class="header">
            <h1>BARONS MATH QUIZ</h1>
            <p style="font-size: 1.5rem; color: #00ccff;">Geometry Dash Edition - For 1st & 2nd Graders</p>
        </div>

        <div class="score-container">
            <div class="score-box">
                <div>Question</div>
                <div class="score-value" id="questionCount">1/10</div>
            </div>
            <div class="score-box">
                <div>Score</div>
                <div class="score-value" id="score">0</div>
            </div>
        </div>

        <div class="question-container">
            <div class="question" id="question">5 + 3 = ?</div>
            <div class="options-container" id="optionsContainer">
                <!-- Options will be generated here -->
            </div>
        </div>

        <div class="controls-container">
            <button class="control-btn help-btn" id="helpBtn">
                <i class="fas fa-question-circle"></i> Quick Help
            </button>
            <button class="control-btn restart-btn" id="restartBtn">
                <i class="fas fa-redo"></i> Restart Quiz
            </button>
            <button class="control-btn share-btn" id="shareBtn">
                <i class="fas fa-share-alt"></i> Share Results
            </button>
        </div>

        <div class="help-container" id="helpContainer">
            <h3><i class="fas fa-lightbulb"></i> How to solve this:</h3>
            <div class="help-text" id="helpText"></div>
            <div class="help-example" id="helpExample"></div>
        </div>

        <div class="result-container" id="resultContainer">
            <div class="result-title" id="resultTitle">Quiz Complete!</div>
            <div class="emoji" id="resultEmoji">ðŸŽ‰</div>
            <div class="result-message" id="resultMessage"></div>
            <div class="result-tip" id="resultTip"></div>
            <div class="result-score">Score: <span id="finalScore">0</span>/10</div>
            <button class="control-btn restart-btn" style="margin: 20px auto; max-width: 300px;">
                <i class="fas fa-redo"></i> Play Again
            </button>
        </div>

        <div class="geometry-dash-elements">
            <div class="cube"></div>
            <div class="cube"></div>
            <div class="spike"></div>
            <div class="ship"></div>
        </div>
    </div>

    <div class="footer">
        <p>Designed for 1st & 2nd Graders â€¢ Numbers 0-10 â€¢ Addition & Subtraction</p>
        <p>Â© 2023 Barons Math Quiz â€¢ Geometry Dash Style</p>
    </div>

    <audio id="correctSound" src="https://assets.mixkit.co/sfx/preview/mixkit-correct-answer-tone-2870.mp3" preload="auto"></audio>
    <audio id="wrongSound" src="https://assets.mixkit.co/sfx/preview/mixkit-wrong-answer-fail-notification-946.mp3" preload="auto"></audio>
    <audio id="clickSound" src="https://assets.mixkit.co/sfx/preview/mixkit-select-click-1109.mp3" preload="auto"></audio>
    <audio id="winSound" src="https://assets.mixkit.co/sfx/preview/mixkit-winning-chimes-2015.mp3" preload="auto"></audio>

    <script>
        // Game variables
        let currentQuestion = 0;
        let score = 0;
        let questions = [];
        let soundEnabled = true;
        const totalQuestions = 10;

        // DOM elements
        const questionElement = document.getElementById('question');
        const optionsContainer = document.getElementById('optionsContainer');
        const questionCountElement = document.getElementById('questionCount');
        const scoreElement = document.getElementById('score');
        const helpBtn = document.getElementById('helpBtn');
        const helpContainer = document.getElementById('helpContainer');
        const helpText = document.getElementById('helpText');
        const helpExample = document.getElementById('helpExample');
        const restartBtn = document.getElementById('restartBtn');
        const shareBtn = document.getElementById('shareBtn');
        const resultContainer = document.getElementById('resultContainer');
        const resultTitle = document.getElementById('resultTitle');
        const resultMessage = document.getElementById('resultMessage');
        const resultTip = document.getElementById('resultTip');
        const resultEmoji = document.getElementById('resultEmoji');
        const finalScoreElement = document.getElementById('finalScore');
        const soundToggle = document.getElementById('soundToggle');
        
        // Audio elements
        const correctSound = document.getElementById('correctSound');
        const wrongSound = document.getElementById('wrongSound');
        const clickSound = document.getElementById('clickSound');
        const winSound = document.getElementById('winSound');

        // Generate random math questions
        function generateQuestions() {
            questions = [];
            for (let i = 0; i < totalQuestions; i++) {
                // Randomly choose between addition and subtraction
                const isAddition = Math.random() > 0.5;
                let num1, num2, answer;
                
                if (isAddition) {
                    // Addition: 0-10, ensure sum <= 10
                    num1 = Math.floor(Math.random() * 11);
                    num2 = Math.floor(Math.random() * (11 - num1));
                    answer = num1 + num2;
                    questions.push({
                        question: `${num1} + ${num2} = ?`,
                        answer: answer,
                        type: 'addition',
                        num1: num1,
                        num2: num2
                    });
                } else {
                    // Subtraction: 0-10, ensure no negative results
                    num1 = Math.floor(Math.random() * 11);
                    num2 = Math.floor(Math.random() * (num1 + 1));
                    answer = num1 - num2;
                    questions.push({
                        question: `${num1} - ${num2} = ?`,
                        answer: answer,
                        type: 'subtraction',
                        num1: num1,
                        num2: num2
                    });
                }
            }
        }

        // Display current question
        function displayQuestion() {
            const current = questions[currentQuestion];
            questionElement.textContent = current.question;
            questionCountElement.textContent = `${currentQuestion + 1}/${totalQuestions}`;
            
            // Generate answer options
            const options = generateOptions(current.answer);
            optionsContainer.innerHTML = '';
            
            options.forEach(option => {
                const button = document.createElement('button');
                button.className = 'option-btn';
                button.textContent = option;
                button.addEventListener('click', () => checkAnswer(option));
                optionsContainer.appendChild(button);
            });
            
            // Hide help container
            helpContainer.classList.remove('show');
            
            // Hide result container
            resultContainer.classList.remove('show');
        }

        // Generate multiple choice options (1 correct + 3 wrong)
        function generateOptions(correctAnswer) {
            const options = [correctAnswer];
            
            // Generate 3 unique wrong answers
            while (options.length < 4) {
                // Generate wrong answer within 0-10 range, different from correct
                let wrongAnswer;
                do {
                    // Make wrong answer somewhat plausible (within Â±3 of correct answer)
                    const offset = Math.floor(Math.random() * 7) - 3; // -3 to +3
                    wrongAnswer = correctAnswer + offset;
                    
                    // Ensure it's within 0-10 range and not equal to correct answer
                    if (wrongAnswer < 0) wrongAnswer = 0;
                    if (wrongAnswer > 10) wrongAnswer = 10;
                } while (options.includes(wrongAnswer));
                
                options.push(wrongAnswer);
            }
            
            // Shuffle options
            return shuffleArray(options);
        }

        // Fisher-Yates shuffle algorithm
        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        // Check selected answer
        function checkAnswer(selectedOption) {
            playSound(clickSound);
            const current = questions[currentQuestion];
            const buttons = document.querySelectorAll('.option-btn');
            const correctButton = Array.from(buttons).find(btn => parseInt(btn.textContent) === current.answer);
            
            // Disable all buttons
            buttons.forEach(btn => {
                btn.disabled = true;
                btn.style.cursor = 'not-allowed';
            });
            
            // Mark correct/wrong
            if (selectedOption === current.answer) {
                score++;
                scoreElement.textContent = score;
                playSound(correctSound);
                
                // Highlight correct button
                correctButton.classList.add('correct');
            } else {
                playSound(wrongSound);
                
                // Highlight wrong button
                const selectedButton = Array.from(buttons).find(btn => parseInt(btn.textContent) === selectedOption);
                if (selectedButton) selectedButton.classList.add('wrong');
                
                // Also highlight correct button
                correctButton.classList.add('correct');
            }
            
            // Move to next question after delay
            setTimeout(() => {
                currentQuestion++;
                if (currentQuestion < totalQuestions) {
                    displayQuestion();
                } else {
                    showResults();
                }
            }, 1500);
        }

        // Show final results
        function showResults() {
            playSound(winSound);
            finalScoreElement.textContent = score;
            
            // Set result messages based on score
            if (score >= 9) {
                resultTitle.textContent = "Math Master! ðŸ†";
                resultMessage.textContent = "Wow! You're a math superstar! You got almost all questions right!";
                resultTip.textContent = "Tip: Keep practicing to stay sharp! Try timing yourself next time.";
                resultEmoji.textContent = "ðŸŒŸ";
            } else if (score >= 7) {
                resultTitle.textContent = "Great Job! ðŸ‘";
                resultMessage.textContent = "You did really well! You understand addition and subtraction!";
                resultTip.textContent = "Tip: Practice counting objects around you to get even better!";
                resultEmoji.textContent = "ðŸŽ¯";
            } else if (score >= 5) {
                resultTitle.textContent = "Good Effort! ðŸ’ª";
                resultMessage.textContent = "You're getting there! Keep practicing and you'll improve!";
                resultTip.textContent = "Tip: Use your fingers to help count when solving problems.";
                resultEmoji.textContent = "ðŸ“š";
            } else {
                resultTitle.textContent = "Keep Practicing! ðŸŒ±";
                resultMessage.textContent = "Math takes practice! Try again and you'll get better!";
                resultTip.textContent = "Tip: Start with smaller numbers and use counting blocks or drawings.";
                resultEmoji.textContent = "ðŸŒ±";
            }
            
            resultContainer.classList.add('show');
        }

        // Show help for current question
        function showHelp() {
            playSound(clickSound);
            const current = questions[currentQuestion];
            
            if (current.type === 'addition') {
                helpText.textContent = `When we add ${current.num1} + ${current.num2}, we're putting ${current.num1} and ${current.num2} together to find the total.`;
                helpExample.textContent = `Example: Count ${current.num1} fingers, then count ${current.num2} more. How many fingers total? That's ${current.answer}!`;
            } else {
                helpText.textContent = `When we subtract ${current.num1} - ${current.num2}, we're taking away ${current.num2} from ${current.num1} to see what's left.`;
                helpExample.textContent = `Example: Start with ${current.num1} fingers, put down ${current.num2} fingers. How many are still up? That's ${current.answer}!`;
            }
            
            helpContainer.classList.add('show');
        }

        // Restart the quiz
        function restartQuiz() {
            playSound(clickSound);
            currentQuestion = 0;
            score = 0;
            scoreElement.textContent = score;
            generateQuestions();
            displayQuestion();
        }

        // Share results
        function shareResults() {
            playSound(clickSound);
            
            if (navigator.share) {
                // Use Web Share API if available
                navigator.share({
                    title: 'Barons Math Quiz Results',
                    text: `I scored ${score}/10 on the Barons Math Quiz! Can you beat my score?`,
                    url: window.location.href
                });
            } else {
                // Fallback: Copy to clipboard
                const shareText = `I scored ${score}/10 on the Barons Math Quiz! Try it yourself: ${window.location.href}`;
                navigator.clipboard.writeText(shareText)
                    .then(() => {
                        alert('Results copied to clipboard! Share them with your parents!');
                    })
                    .catch(err => {
                        console.error('Failed to copy: ', err);
                        alert(`I scored ${score}/10 on the Barons Math Quiz!`);
                    });
            }
        }

        // Play sound if enabled
        function playSound(soundElement) {
            if (!soundEnabled) return;
            
            // Reset and play
            soundElement.currentTime = 0;
            soundElement.play().catch(e => console.log("Audio play failed:", e));
        }

        // Toggle sound on/off
        function toggleSound() {
            soundEnabled = !soundEnabled;
            const icon = soundToggle.querySelector('i');
            
            if (soundEnabled) {
                icon.className = 'fas fa-volume-up';
                soundToggle.style.backgroundColor = 'rgba(255, 255, 255, 0.2)';
            } else {
                icon.className = 'fas fa-volume-mute';
                soundToggle.style.backgroundColor = 'rgba(255, 0, 0, 0.3)';
            }
            
            playSound(clickSound);
        }

        // Event listeners
        helpBtn.addEventListener('click', showHelp);
        restartBtn.addEventListener('click', restartQuiz);
        shareBtn.addEventListener('click', shareResults);
        soundToggle.addEventListener('click', toggleSound);

        // Also restart when clicking restart button in results
        document.querySelector('.result-container .restart-btn').addEventListener('click', restartQuiz);

        // Initialize the quiz
        generateQuestions();
        displayQuestion();
    </script>
</body>
</html>
